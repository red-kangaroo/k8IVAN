if $(WINDOZE) {
  HDRS += $(TOP)/windoze/include ;
  HDRS += $(TOP)/windoze/include/SDL ;
  #WINDOZE_THREADS = ;
  if ! $(NT) || $(NO_CONSOLE) {
    WINSUBSYS = "windows" ;
  } else {
    WINSUBSYS = "console" ;
  }
  #WINLIBS += -lkernel32 ;
  windoze-fix ;
}

if $(NT) {
  CC = $(CC) -pipe -static-libgcc ;
  C++ = $(C++) -pipe -static-libgcc -static-libstdc++ ;
  LINK = $(LINK) -pipe -static-libgcc ;
  C++LINK = $(C++LINK) -pipe -static-libgcc -static-libstdc++ ;
}
